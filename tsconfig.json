{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*", "src/types"]
    }
  },
  "include": ["src/**/*"]
}
